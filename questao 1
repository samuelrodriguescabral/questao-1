#include <stdio.h>
int main(){
 float nota1, nota2, nota3, nota4;
    float pontuacao_total;

    
    printf("Digite a nota 1: ");
    scanf("%f", &nota1);

    printf("Digite a nota 2: ");
    scanf("%f", &nota2);

    printf("Digite a nota 3: ");
    scanf("%f", &nota3);

    printf("Digite a nota 4: ");
    scanf("%f", &nota4);

    
    pontuacao_total = nota1 + nota2 + nota3 + nota4;

    
    printf("A pontuacao total do aluno e: %.2f\n", pontuacao_total);

    return 0;
}	
